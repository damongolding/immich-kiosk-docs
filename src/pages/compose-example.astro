---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import AnchorHeading from "@astrojs/starlight/components/AnchorHeading.astro";

import { Code } from "@astrojs/starlight/components";

const config = await fetch(
    "https://raw.githubusercontent.com/damongolding/immich-kiosk/refs/heads/main/docker-compose.yaml",
);
const myCode = await config.text();

const composeEnv = await fetch(
    "https://raw.githubusercontent.com/damongolding/immich-kiosk/refs/heads/main/docker-compose-env.yaml",
);
const composeEnvExample = await composeEnv.text();
---

<StarlightPage
    frontmatter={{
        title: "docker-compose.yaml",
    }}
>
    <Code code={myCode} lang="yaml" title="docker-compose.yaml" />

    <AnchorHeading level="2" id="With Environment Variables"
        >With Environment Variables</AnchorHeading
    >

    <Code code={composeEnvExample} lang="yaml" title="docker-compose.yaml" />
</StarlightPage>
